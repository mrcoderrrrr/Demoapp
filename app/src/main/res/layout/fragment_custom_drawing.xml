<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.CustomDrawingFragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    android:layout_marginTop="0dp"
    app:layout_constraintTop_toTopOf="parent"
    android:id="@+id/cv_signature"
    />

    <ImageView
        android:id="@+id/iv_signature"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="44dp"
        android:text="Signature View"
        android:textSize="30dp"
        android:background="@color/quantum_grey"
        app:layout_constraintTop_toBottomOf="@+id/cv_signature"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btn_savefile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_signature" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>