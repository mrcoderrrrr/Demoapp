                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_add"
                        android:layout_width="62dp"
                        android:layout_height="70dp"
                        android:layout_marginEnd="24dp"
                        android:layout_marginBottom="24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:srcCompat="@drawable/ic_baseline_add_24" />

                    <ImageView
                        android:id="@+id/iv_adduser"
                        android:layout_width="57dp"
                        android:layout_height="55dp"
                        android:visibility="invisible"
                        android:layout_marginEnd="24dp"
                        android:layout_marginBottom="24dp"
                        app:layout_constraintBottom_toTopOf="@+id/iv_add"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:srcCompat="@drawable/ic_baseline_person_add_24" />

                    <ImageView
                        android:id="@+id/iv_userlist"
                        android:layout_width="57dp"
                        android:layout_height="57dp"
                        android:visibility="invisible"
                        android:layout_marginEnd="24dp"
                        android:layout_marginBottom="21dp"
                        app:layout_constraintBottom_toTopOf="@+id/iv_adduser"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:srcCompat="@drawable/ic_baseline_format_list_bulleted_24" />
                </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nv_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/activity_nav_header"
            app:menu="@menu/nav_menu" />


<!--    </androidx.drawerlayout.widget.DrawerLayout>-->
</layout>